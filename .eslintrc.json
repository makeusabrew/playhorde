{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
  ],
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": 2,
    "curly": 2,
    "eqeqeq": ["error", "smart"],
    "no-else-return": 2,
    "indent": ["error", 2]
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  }
}
